{
  "name": "search-logger",
  "version": "2.0.1",
  "description": "Search Logger browser extension",
  "scripts": {
    "dev:chrome": "webpack --watch --env BROWSER=chrome --mode development",
    "dev:firefox": "webpack --watch --env BROWSER=firefox --mode development",
    "dev:safari": "webpack --watch --env BROWSER=safari --mode development",
    "build:chrome": "webpack --env BROWSER=chrome --mode production",
    "build:firefox": "webpack --env BROWSER=firefox --mode production",
    "build:safari": "webpack --env BROWSER=safari --mode production",
    "build": "npm run build:chrome && npm run build:firefox && npm run build:safari",
    "dev": "npm run dev:chrome",
    "build:ios": "webpack --config webpack.ios.config.js --mode production",
    "dev:ios": "webpack --config webpack.ios.config.js --mode development",
    "fix": "run-p fix:*",
    "fix:eslint": "npm run lint:eslint -- --fix",
    "fix:prettier": "npm run lint:prettier -- --write",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint --ext js,ts .",
    "lint:prettier": "prettier -l \"**/*.{js,ts,json,md,yml}\"",
    "lint:type": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/chrome": "^0.1.32",
    "@types/safari-extension": "^0.0.33",
    "@types/node": "^25.0.2",
    "@types/webextension-polyfill": "^0.12.4",
    "@types/webpack-env": "^1.18.8",
    "copy-webpack-plugin": "^13.0.1",
    "mini-css-extract-plugin": "^2.9.4",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^5.5.4",
    "commander": "^14.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0",
    "webextension-polyfill": "^0.12.0",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1",
    "zip-webpack-plugin": "^4.0.3"
  },
  "dependencies": {
    "lz-string": "^1.5.0"
  }
}
