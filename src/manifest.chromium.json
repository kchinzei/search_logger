{
  "manifest_version": 3,
  "name": "Search Logger",
  "version": "2.0.0",
  "description": "Logs Google/Bing search terms into a log file.",
  "permissions": [
    "storage",
    "downloads",
    "tabs"
  ],
  "host_permissions": [
    "*://*.google.com/*",
    "*://*.google.co.jp/*",
    "*://*.bing.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Search Logger"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "*://www.google.com/search*",
        "*://www.google.co.jp/search*",
        "*://www.google.com/maps*",
        "*://www.google.co.jp/maps*",
        "*://www.bing.com/search*",
        "*://www.bing.com/maps*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
